<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- App branding color for the app bar. -->
        <item name="colorPrimary">#2196F3</item><!--500 Primary Color-->
        <!-- Darker variant for the status bar and contextual app bars. -->
        <item name="colorPrimaryDark">#1976D2</item><!--700 Primary Color Dark-->
        <!-- Theme UI controls like checkboxes and text fields. -->
        <item name="colorAccent">#4489fe</item>
    </style>

    <style name="CheckBoxLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:checked">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HeaderTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#808080</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>
